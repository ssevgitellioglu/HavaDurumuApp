<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/gunduz2"

>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spnSehirler"
            android:layout_width="177dp"
            android:layout_height="90dp"
            android:padding="5dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="49dp"
            android:layout_marginBottom="18dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtTarih" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="9dp"/>

    <TextView
            android:layout_width="303dp"
            android:layout_height="67dp"
            android:id="@+id/txtTarih"
            android:textSize="30sp"
            android:textColor="@android:color/background_dark"
            android:text="TARİH" android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/spnSehirler" android:layout_marginBottom="45dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/txtCelcious"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="74dp" android:layout_marginEnd="74dp"/>
    <TextView
            android:layout_width="76dp"
            android:layout_height="77dp"
            android:id="@+id/txtSicaklik"
            android:textColor="@android:color/background_dark"
            android:textSize="@android:dimen/notification_large_icon_width"
            android:text="41"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTarih" app:layout_constraintEnd_toStartOf="@+id/txtCelcious"
            android:layout_marginBottom="42dp" app:layout_constraintBottom_toTopOf="@+id/imgIcon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="143dp"/>
    <TextView
            android:text="°C"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:id="@+id/txtCelcious"
            android:textColor="@android:color/background_dark" android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/txtTarih" app:layout_constraintStart_toEndOf="@+id/txtSicaklik"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/imgIcon" android:layout_marginEnd="148dp"
    />
    <ImageView
            android:layout_width="237dp"
            android:layout_height="187dp"
            app:srcCompat="@drawable/icon_01"
            android:id="@+id/imgIcon"
            app:layout_constraintTop_toBottomOf="@+id/txtCelcious" android:layout_marginBottom="33dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/txtAciklama"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Güneşli"
            android:layout_width="216dp"
            android:layout_height="75dp"
            android:id="@+id/txtAciklama" android:textSize="30sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imgIcon" android:layout_marginBottom="103dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>